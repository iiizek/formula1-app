{
	"files": [],
	"references": [
		{
			"path": "./tsconfig.app.json"
		}
	],
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		},
		"target": "ES2020", // Целевая версия JavaScript
		"module": "ESNext", // Используемый модульный формат
		"lib": ["DOM", "DOM.Iterable", "ES2020"], // Библиотеки, доступные в проекте
		"strict": true, // Включает строгий режим
		"moduleResolution": "Node", // Резолвинг модулей
		"esModuleInterop": true, // Интероперабельность с CommonJS
		"skipLibCheck": true, // Пропуск проверки типов в библиотеках
		"forceConsistentCasingInFileNames": true, // Консистентность регистров в путях
		"allowSyntheticDefaultImports": true, // Позволяет использовать дефолтный импорт
		"resolveJsonModule": true, // Импорт JSON как модулей
		"isolatedModules": true // Обработка каждого файла как отдельного модуля
	}
}
